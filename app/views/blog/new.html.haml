= tinymce
%h3.white.center Create new blog post
%hr
.post-container
  = form_for @post, url: {action: :new_post, controller: :blog}, html: {id: 'new_post_form', class: "form form-horizontal"} do |f|
    .form-group
      .col-sm-2
        = f.label :title, class: 'control-label white'
      .col-sm-10
        = f.text_field :title, {class: 'form-control', required: true}
    .form-group
      .col-sm-2
        = f.label :body, class: 'control-label white'
      .col-sm-10
        = f.text_area :body, {rows: 20, class: 'form-control tinymce full-width'}
    .form-group
      .col-sm-offset-2.col-sm-10
        %button#new_post_button.btn.btn-default.pull-right.font-l{type: 'submit'} Submit
        = link_to 'Back', :back, class: 'btn btn-default pull-right back-button'
